{
    "extends": "standard",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 9
    },
    "rules": {
        "semi": [2, "always"],
        "object-curly-spacing": [2, "always"]
    },
    "overrides": [
        {
            "files": [ "test/**/*" ],
            "rules": {
                "no-undef": [0],
                "no-unused-expressions": [0]
            }
        }
    ]
}